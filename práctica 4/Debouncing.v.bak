module Debouncing(
     input iclk,
	  input [4:0] iSignal,
	  output[4:0] oS 
	  );
	  
reg rState_Q; 
reg rState_D;
	
assign oS = rState_Q;	

always @ (posedge iClk)
begin
	rState_Q <= rState_D;
end  
	  
always @ *
 
if (iSignal == 4'd0)
   begin
		rState_D = 4'd0;
   end 
else if (iSignal == 4'd15)
	begin
		rState_D = 4'd1;
	end 
	else
	begin 
		rState_D = rState_Q; 
	end 
endmodule 
	  